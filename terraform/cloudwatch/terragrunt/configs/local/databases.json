{
  "main-database": {
    "name": "local-main-database-${ENVIRONMENT}",
    "short_name": "main",
    "customer": "${CUSTOMER}",
    "team": "${TEAM}",
    "environment": "${ENVIRONMENT}",
    "region": "${REGION}",
    "project": "${PROJECT}",
    "alarms": ["cpu_utilization", "memory_utilization", "database_connections"],
    "exclude_alarms": ["read_latency", "write_latency"],
    "custom_alarms": {
      "local-strict-cpu-utilization": {
        "alarm_name": "Sev1/${CUSTOMER}/${TEAM}/RDS/Local/CPU/local-strict-cpu-utilization-above-60pct",
        "comparison_operator": "GreaterThanThreshold",
        "evaluation_periods": 1,
        "metric_name": "CPUUtilization",
        "namespace": "AWS/RDS",
        "period": 300,
        "statistic": "Average",
        "threshold": 60,
        "alarm_description": "Local main database CPU utilization is above 60% (stricter than global)",
        "dimensions": [
          {
            "name": "DBInstanceIdentifier",
            "value": "local-main-database-${ENVIRONMENT}"
          }
        ]
      }
    }
  },
  "local-analytics-db": {
    "name": "local-analytics-database-${ENVIRONMENT}",
    "short_name": "analytics",
    "customer": "${CUSTOMER}",
    "team": "${TEAM}",
    "environment": "${ENVIRONMENT}",
    "region": "${REGION}",
    "project": "${PROJECT}",
    "alarms": ["cpu_utilization", "free_storage_space"],
    "custom_alarms": {}
  }
}
