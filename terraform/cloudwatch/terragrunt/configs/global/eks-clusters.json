{
  "main-cluster": {
    "name": "main-eks-cluster-${ENVIRONMENT}",
    "customer": "${CUSTOMER}",
    "team": "${TEAM}",
    "alarms": ["cpu_utilization", "memory_utilization"],
    "custom_alarms": {
      "high_pod_count": {
        "alarm_name": "Sev2/${CUSTOMER}/${TEAM}/EKS/Cluster/PodCount/pod-count-above-100",
        "comparison_operator": "GreaterThanThreshold",
        "evaluation_periods": 2,
        "metric_name": "number_of_pods",
        "namespace": "ContainerInsights",
        "period": 300,
        "statistic": "Average",
        "threshold": 100,
        "alarm_description": "EKS cluster pod count is above 100",
        "treat_missing_data": "notBreaching",
        "unit": "Count",
        "dimensions": [
          {
            "name": "ClusterName",
            "value": "main-eks-cluster-${ENVIRONMENT}"
          }
        ]
      }
    }
  },
  "secondary-cluster": {
    "name": "secondary-eks-cluster-${ENVIRONMENT}",
    "customer": "${CUSTOMER}",
    "team": "${TEAM}",
    "alarms": ["cpu_utilization", "memory_utilization"]
  },
  "staging-cluster": {
    "name": "staging-eks-cluster-${ENVIRONMENT}",
    "customer": "${CUSTOMER}",
    "team": "${TEAM}",
    "alarms": ["cpu_utilization"]
  }
}
