{
  "default_schema": {
    "required_fields": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the record",
        "validation": {
          "min_length": 1,
          "max_length": 255,
          "pattern": "^[a-zA-Z0-9_-]+$"
        }
      },
      "customerId": {
        "type": "string",
        "description": "Customer identifier",
        "validation": {
          "min_length": 1,
          "max_length": 100,
          "pattern": "^[a-zA-Z0-9_-]+$"
        }
      },
      "tenantId": {
        "type": "string",
        "description": "Tenant identifier",
        "validation": {
          "min_length": 1,
          "max_length": 100,
          "pattern": "^[a-zA-Z0-9_-]+$"
        }
      },
      "timestamp": {
        "type": "string",
        "description": "ISO 8601 timestamp",
        "validation": {
          "format": "iso8601"
        }
      },
      "data": {
        "type": "object",
        "description": "Main data payload",
        "validation": {
          "required": true,
          "not_empty": true
        }
      }
    },
    "optional_fields": {
      "status": {
        "type": "string",
        "description": "Record status",
        "validation": {
          "allowed_values": ["active", "inactive", "pending", "completed", "failed"]
        }
      },
      "priority": {
        "type": "string",
        "description": "Processing priority",
        "validation": {
          "allowed_values": ["low", "medium", "high", "critical"]
        }
      },
      "tags": {
        "type": "array",
        "description": "Array of string tags",
        "validation": {
          "item_type": "string",
          "min_length": 1,
          "max_length": 50
        }
      },
      "metadata": {
        "type": "object",
        "description": "Additional metadata",
        "validation": {
          "required": false
        }
      }
    }
  },
  "file_type_schemas": {
    "customer_data": {
      "description": "Customer data records",
      "extends": "default_schema",
      "additional_required_fields": {
        "email": {
          "type": "string",
          "description": "Customer email address",
          "validation": {
            "format": "email"
          }
        },
        "name": {
          "type": "string",
          "description": "Customer name",
          "validation": {
            "min_length": 1,
            "max_length": 200
          }
        }
      },
      "data_schema": {
        "type": "object",
        "required_fields": {
          "customer_type": {
            "type": "string",
            "validation": {
              "allowed_values": ["individual", "business", "enterprise"]
            }
          },
          "region": {
            "type": "string",
            "validation": {
              "allowed_values": ["us-east", "us-west", "eu-west", "eu-central", "ap-southeast"]
            }
          }
        }
      }
    },
    "order_data": {
      "description": "Order processing records",
      "extends": "default_schema",
      "additional_required_fields": {
        "orderNumber": {
          "type": "string",
          "description": "Order number",
          "validation": {
            "pattern": "^ORD-[0-9]{8}-[A-Z0-9]{4}$"
          }
        },
        "amount": {
          "type": "number",
          "description": "Order amount",
          "validation": {
            "min_value": 0.01,
            "max_value": 999999.99
          }
        }
      },
      "data_schema": {
        "type": "object",
        "required_fields": {
          "items": {
            "type": "array",
            "validation": {
              "min_items": 1,
              "item_type": "object"
            }
          },
          "currency": {
            "type": "string",
            "validation": {
              "allowed_values": ["USD", "EUR", "GBP", "JPY"]
            }
          }
        }
      }
    },
    "inventory_data": {
      "description": "Inventory management records",
      "extends": "default_schema",
      "additional_required_fields": {
        "sku": {
          "type": "string",
          "description": "Stock keeping unit",
          "validation": {
            "pattern": "^[A-Z0-9]{6,12}$"
          }
        },
        "quantity": {
          "type": "integer",
          "description": "Available quantity",
          "validation": {
            "min_value": 0
          }
        }
      },
      "data_schema": {
        "type": "object",
        "required_fields": {
          "category": {
            "type": "string",
            "validation": {
              "min_length": 1,
              "max_length": 100
            }
          },
          "location": {
            "type": "string",
            "validation": {
              "min_length": 1,
              "max_length": 200
            }
          }
        }
      }
    }
  },
  "validation_settings": {
    "max_validation_errors": 100,
    "continue_on_validation_errors": true,
    "log_validation_errors": true,
    "include_failed_records_in_output": false,
    "validation_error_threshold_percentage": 10.0
  }
} 